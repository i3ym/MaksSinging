[*]
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.cs]
dotnet_analyzer_diagnostic.severity = suggestion
dotnet_diagnostic.IDE0002.severity = none       # Name can be simplified
dotnet_diagnostic.IDE0047.severity = none       # Remove unnecessary parentheses
dotnet_diagnostic.IDE0058.severity = none       # Remove unnecessary expression value
dotnet_diagnostic.IDE0290.severity = none       # Use primary constructor
dotnet_diagnostic.CA1711.severity = none        # Identifiers should not have incorrect suffix
dotnet_diagnostic.CA1716.severity = none        # Identifiers should not match keywords
dotnet_diagnostic.CA1720.severity = none        # Identifiers should not contain type names
dotnet_diagnostic.CA1805.severity = none        # Do not initialize unnecessarily
dotnet_diagnostic.CA1822.severity = suggestion  # Mark members as static
dotnet_diagnostic.CA1848.severity = none        # Use the LoggerMessage delegates
dotnet_diagnostic.CA1861.severity = none        # Avoid constant arrays as arguments
dotnet_diagnostic.CS1998.severity = none        # Async method lacks 'await' operators and will run synchronously
dotnet_diagnostic.CA2016.severity = warning     # Forward the CancellationToken parameter to methods that take one
dotnet_diagnostic.CA2254.severity = none        # Template should be a static expression

dotnet_code_quality.CA2007.output_kind = DynamicallyLinkedLibrary   # Do not directly await a Task
dotnet_code_quality.CA1051.exclude_structs = true                   # Do not declare visible instance fields
dotnet_code_quality.CA1051.api_surface = public, internal           # Do not declare visible instance fields

dotnet_code_quality.CA1715.exclude_single_letter_type_parameters = true # Identifiers should have correct prefix

csharp_space_after_cast = true
csharp_indent_labels = no_change
csharp_indent_case_contents_when_block = false
csharp_style_implicit_object_creation_when_type_is_apparent = false
csharp_style_namespace_declarations = file_scoped
csharp_style_prefer_local_over_anonymous_function = false
csharp_style_prefer_range_operator = false
csharp_style_prefer_primary_constructors = false

csharp_style_var_when_type_is_apparent = true
csharp_style_var_for_built_in_types = true
csharp_style_var_elsewhere = true

csharp_prefer_braces = when_multiline
csharp_style_expression_bodied_constructors = when_on_single_line
csharp_style_expression_bodied_methods = when_on_single_line
csharp_style_expression_bodied_operators = when_on_single_line
csharp_style_expression_bodied_properties = when_on_single_line
csharp_style_expression_bodied_indexers = when_on_single_line
csharp_style_expression_bodied_accessors = when_on_single_line
csharp_style_expression_bodied_lambdas = when_on_single_line
csharp_style_expression_bodied_local_functions = when_on_single_line

dotnet_style_require_accessibility_modifiers = omit_if_default
dotnet_style_prefer_conditional_expression_over_return = false
dotnet_style_prefer_simplified_boolean_expressions = false

dotnet_style_parentheses_in_arithmetic_binary_operators = never_if_unnecessary
dotnet_style_parentheses_in_relational_binary_operators = always_for_clarity
dotnet_style_parentheses_in_other_binary_operators = always_for_clarity
dotnet_style_parentheses_in_other_operators = never_if_unnecessary

dotnet_naming_style.pascal_case.capitalization = pascal_case

dotnet_naming_style.pascal_case_underscored.capitalization = pascal_case
dotnet_naming_style.pascal_case_underscored.required_prefix = _


# properties to be PascalCase
dotnet_naming_symbols.properties.applicable_kinds = property

dotnet_naming_rule.propertiesPascal.symbols = properties
dotnet_naming_rule.propertiesPascal.style = pascal_case
dotnet_naming_rule.propertiesPascal.severity = suggestion


# fields to be PascalCase but hidden to allow _PascalCase
dotnet_naming_symbols.fields.applicable_kinds = field

dotnet_naming_rule.fieldsPascal.symbols = fields
dotnet_naming_rule.fieldsPascal.style = pascal_case
dotnet_naming_rule.fieldsPascal.severity = none
